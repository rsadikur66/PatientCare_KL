
@{
    ViewBag.Title = "T74073";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Apps/JSController/Initialization/T74073Controller.js"></script>
<script src="~/Apps/JSService/Initialization/T74073Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

@section container{
<div id="options" ng-app="Ambucare" ng-controller="T74073Controller">

    <button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button>
    <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
    <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear()"></button>
</div>
}

<div class="container" ng-app="Ambucare" ng-controller="T74073Controller">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 1.6% auto; border: 2px solid #E17D7D; border-radius: 5px">
                    <div class="row" style="padding-bottom: 8px; padding-top: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            @*<div class="col-lg-5 col-md-5 col-sm-5">
                                    <label id="lblCostTypeId" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblCostTypeId'" class="ng-cloak" Text="" associatedcontrolid="txtCostType">{{field.T_LANG2_TEXT}}</label>
                                </div>*@
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtCostType" type="hidden" readonly="readonly" ng-model="obj.T_COST_TYPE_DTL_ID" style="width: 40%; height: 25px" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblEnglishName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'" class="ng-cloak" Text="" associatedcontrolid="txtEnglishName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtEnglishName" type="text" ng-model="obj.T_LANG2_NAME" style="width: 80%; height: 25px" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblLocalName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'" class="ng-cloak" Text="" associatedcontrolid="txtEnglishName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtLocalName" type="text" ng-model="obj.T_LANG1_NAME" style="width: 80%; height: 25px" />
                            </div>

                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="col-lg-5 col-md-5 col-sm-5">
                            <label id="lblPriceTypeId" style="margin-left:-14px;" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblPriceTypeId'" class="ng-cloak" Text="" AssociatedControlID="ddlPriceType">{{field.T_LANG2_TEXT}}</label>
                        </div>
                        <div class="col-lg-5 col-md-5 col-sm-5 form-inline form-group">
                            <div class="ng-cloak select-box">
                                <ui-select ng-model="obj.M.selected" id="ddlTypeId" theme="select2" style="min-width: 175px; max-width: 176px;" append-to-body="true">
                                    <ui-select-match placeholder="Select">{{$select.selected.T_LANG2_NAME}}</ui-select-match>
                                    <ui-select-choices repeat="M in CostType | propsFilter: {T_LANG2_NAME: $select.search}">
                                        <div ng-bind-html="M.T_LANG2_NAME | highlight: $select.search"></div>
                                    </ui-select-choices>
                                </ui-select>
                                <input type="hidden" id="ddlTypeId1" ng-model="obj.T_COST_TYPE_ID" ng-bind="obj.T_COST_TYPE_ID = obj.M.selected.T_COST_TYPE_ID" />
                            </div>
                        </div>
                        @*Modal Start*@
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="container">
                                <input type="submit" ng-click="openDialog('CostTypediv',obj.M.selected)" id="btnCostType" value="Add" style="height: 28px; margin-top: 2px; margin-left: -42px;" />
                                <div id="CostTypediv" class="omf-modal">
                                    <div class="omf-modal-body">
                                        <form class="form-horizontal" ng-submit="addCostType()" role="form" name="costTypeForm" novalidate>
                                            <div class="form-group" ng-class="{'has-error': costTypeForm.T_LANG2_NAME.$touched && costTypeForm.T_LANG2_NAME.$error.required , 'has-success': costTypeForm.T_LANG2_NAME.$valid }">
                                                <table class="table table-responsive">
                                                    <tr>
                                                        <td>English Name</td>
                                                        <td><input type="text" ng-model="addCost.T_LANG2_NAME" id="txtEnglishNamePopUp"></td>
                                                        <td>
                                                            <span class="help-block" ng-show="costTypeForm.T_LANG2_NAME.$touched && costTypeForm.T_LANG2_NAME.$error.required">Please enter First Name.</span>
                                                        </td>
                                                    </tr>

                                                    <tr>
                                                        <td>Local Name</td>
                                                        <td><input type="text" ng-model="addCost.T_LANG1_NAME" id="txtLocalNamePopUp"></td>
                                                    <tr align="center">
                                                        <td colspan="2">
                                                            <input class="btn-danger" ng-click="addCostType()" type="submit" value="Add" />
                                                            <input type="button" class="btn-primary col-sm-offset-3" ng-click="closeDialog('CostTypediv')" value="Close" />
                                                        </td>
                                                    </tr>
                                                </table>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*Modal End*@
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div style="width: 30%; text-align: left;">
                            <label id="lblActive" for="chkActive">Active</label>
                            <input id="chkActive" ng-true-value="'1'" ng-false-value="'0'" ng-model="check.active" type="checkbox" />
                            <input type="hidden" ng-model="obj.T_ACTIVE" ng-bind="obj.T_ACTIVE= check.active" />
                        </div>

                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
    </div>

    <!--For Data Gridview start-->
    <div class="row">
        @*<div class="col-lg-2 col-md-2 col-sm-2"></div>*@
        <div class="col-lg-12 col-md-12 col-sm-12">
            <center>

                <table>
                    <tr>
                        <td>
                            <div>
                                <table id="entry-grid" datatable="" dt-options="dtOptions" dt-columns="dtColumns" class="table" style="width: 100%"></table>
                            </div>
                        </td>
                    </tr>
                </table>
            </center>
        </div>
        @*<div class="col-lg-2 col-md-2 col-sm-2"></div>*@
    </div>
    <!--For Data Gridview End-->
</div>
