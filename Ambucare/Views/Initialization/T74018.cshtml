
@{
    ViewBag.Title = "T74018";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Apps/JSController/Initialization/T74018Controller.js"></script>
<script src="~/Apps/JSService/Initialization/T74018Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>
<link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />

@section container{
    <div id="options" ng-app="Ambucare" ng-controller="T74018Controller">
        <button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button>
        <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
        <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear()"></button>
    </div>
}
<div class="container" ng-app="Ambucare" ng-controller="T74018Controller">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 1.6% auto; border: 1px solid #e17d7d; border-radius: 5px; padding: 10px">
                <div class="col-lg-7 col-md-7 col-sm-7"></div>
                <div class="row" style="padding-bottom: 8px; padding-top: 8px">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="col-lg-1 col-md-1 col-sm-1">
                            <label id="lblCostType" associatedcontrolid="txtCostType" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblCostType'" class="ng-cloak" Text="">{{field.T_LANG2_TEXT}}</label>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-2 form-inline form-group">
                            <div class="ng-cloak select-box">
                                <ui-select ng-model="obj.l.selected" id="ddlCostType" theme="select2" style="width: 160px"  append-to-body="true">
                                    <ui-select-match placeholder="Select">{{$select.selected.T_LANG2_NAME}}</ui-select-match>
                                    <ui-select-choices repeat="l in CostTypeData | propsFilter: {T_LANG2_NAME: $select.search}">
                                        <div ng-bind-html="l.T_LANG2_NAME | highlight: $select.search"></div>
                                    </ui-select-choices>
                                </ui-select>
                                <input type="hidden" id="ddlCostTypeId" ng-model="obj.T_COST_TYPE_ID" ng-bind="obj.T_COST_TYPE_ID = obj.l.selected.T_COST_TYPE_ID"/>
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-1">
                            <label id="lblDescription" associatedcontrolid="txtDescription" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblDescription'" class="ng-cloak" Text="">{{field.T_LANG2_TEXT}}</label>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <input id="txtDescription" type="text" ng-model="obj.T_DESCRIPTION"/>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-1">
                            <label id="lblAmount" associatedcontrolid="txtAmount" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblAmount'" class="ng-cloak" Text="">{{field.T_LANG2_TEXT}}</label>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <input id="txtAmount" type="text" ng-model="obj.T_AMOUNT" width="40%"/>
                        </div>
                        <div class="col-lg-3 col-md-3 col-sm-3">
                            <label id="lblActive" for="chkActive" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblActive'" class="ng-cloak" Text="">{{field.T_LANG2_TEXT}}</label>
                            <input id="chkActive" ng-true-value="1" ng-false-value="0" ng-model="check.active" type="checkbox"/>
                            <input type="hidden" ng-model="obj.T_ACTIVE" ng-bind="obj.T_ACTIVE= check.active"/>
                        </div>
                    </div>
                </div>
                <div class="col-lg-5 col-md-5 col-sm-5"></div>
            </div>
        </div>
    </div>
    <!--For Data Gridview start-->
    <div class="row">
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <center>

                <table>
                    <tr>
                        <td>
                            <div class="table-responsive">
                                <table id="entry-grid" datatable="" dt-options="dtOptions" dt-columns="dtColumns" class="table table-hover" style="width: 100%;"></table>
                            </div>
                        </td>
                    </tr>
                </table>
            </center>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
    </div>
    <!--For Data Gridview End-->
</div>
