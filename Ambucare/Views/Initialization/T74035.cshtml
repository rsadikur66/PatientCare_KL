
@{
    ViewBag.Title = "T74035";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="~/Apps/JSController/Initialization/T74035Controller.js"></script>
<script src="~/Apps/JSService/Initialization/T74035Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>

@section container{
    <div id="options" ng-app="Ambucare" ng-controller="T74035Controller">
        <button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button>
        <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
         <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear()"></button> 
    </div>
}

<div class="container" ng-app="Ambucare" ng-controller="T74035Controller">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-3 col-md-3 col-sm-3">
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6" style="margin: 1.6% auto;border: 1px solid #8b0000; border-radius: 5px; padding: 10px;">
                <div class="col-lg-12 col-md-12 col-sm-12" hidden>
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <label id="lblDepartmentId" for="txtDepartmentId" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblDepartmentId'">{{field.T_LANG2_TEXT}}</label>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <input id="txtDepartmentId" type="text" class="form-control" ng-model="obj.T_DEPET_ID" style="margin-right:40%;width: 30%" readonly="readonly" />
                    </div>
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <label id="lblEnglishName" for="txtEnglishName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'">{{field.T_LANG2_TEXT}}</label>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <input id="txtEnglishName" type="text" class="form-control" ng-model="obj.T_LANG2_NAME" style="width: 70%" />
                    </div>
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                </div>
                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                    <div class="col-lg-4 col-md-4 col-sm-4">
                        <label id="lblLocalName" for="txtLocalName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'">{{field.T_LANG2_TEXT}}</label>
                    </div>
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <input id="txtLocalName" type="text" class="form-control" ng-model="obj.T_LANG1_NAME" style="width: 70%" />
                    </div>
                    <div class="col-lg-1 col-md-1 col-sm-1"></div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3">
            </div>
        </div>
        <!--For Data Gridview start-->
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-3"></div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <table>
                    <tr>
                        <td>
                            <div class="table-responsive">
                                <table id="entry-grid" datatable="" dt-options="dtOptions" dt-columns="dtColumns" class="table table-hover"></table>
                            </div>
                        </td>
                    </tr>
                </table>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-3"></div>
        </div>
        <!--For Data Gridview End-->
    </div>
</div>