
@{
    ViewBag.Title = "T74023";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .selected {
        background-color: #E17D7D;
        color: white;
        font-weight: bold;
    }

    tr:hover {
        background-color: #E17D7D;
    }
</style>
<script src="~/Apps/JSService/Initialization/T74023Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>
<script src="~/Apps/JSController/Initialization/T74023Controller.js"></script>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/dirPagination.js"></script>
@section container{
    <div id="options" ng-app="Ambucare" ng-controller="T74023Controller">
        <button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button>
        <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
        <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear_Click()"></button>
        <button ID="btnNext" ToolTip="NextBlock" class="Button Next"></button>
        @*<input id="btnNext" ToolTip="NextBlock" type="button" name="btnse" class="Button Next" ng-click="NextClick()"/>*@
    </div>
}

<div class="container" ng-app="Ambucare" ng-controller="T74023Controller">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 1.6% auto; border: 2px solid #E17D7D; border-radius: 5px">
                    <div>
                       
                    </div>

                    <div class="row" style="padding-bottom: 8px; padding-top: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblEduBord" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEduBord'" associatedcontrolid="txtEduBord">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtEduBord" type="text" ng-model="obj.T_EDU_BOARD_ID" readonly="readonly" style="width: 80%" />
                            </div>

                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblDocDegID" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblDocDegID'" associatedcontrolid="txtDocDegID">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                @*<div class="ng-cloak select-box" >
                                    <ui-select ng-model="obj.M.selected" id="ddlMaritalStatus" theme="select2" ng-disabled="obj.disabled" append-to-body="true" style="min-width: 174px; ">
                                        <ui-select-match placeholder="Select">{{$select.selected.T_LANG2_NAME}}</ui-select-match>
                                        <ui-select-choices repeat="M in MaritalList | propsFilter: {T_LANG2_NAME: $select.search}">
                                            <div ng-bind-html="M.T_LANG2_NAME | highlight: $select.search"></div>
                                        </ui-select-choices>
                                    </ui-select>
                                    <input type="hidden" id="ddlVerbalCode" ng-model="obj.T_DOC_DEGREE_ID" ng-bind="obj.T_DOC_DEGREE_ID=obj.M.selected.T_MRTL_STATUS_CODE" />
                               
                                </div>*@
                                <input id="txtDocDegID" type="text" ng-model="obj.T_DOC_DEGREE_ID" style="width: 80%" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblLocalName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'" associatedcontrolid="txtLocalName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtLocalName" type="text" ng-model="obj.T_LANG1_NAME" style="width: 80%" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblEnglishName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'" associatedcontrolid="txtEnglishName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtEnglishName" type="text" ng-model="obj.T_LANG2_NAME" style="width: 80%" />
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>

    </div>

        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="col-lg-2 col-md-2 col-sm-2"></div>
            <div class="col-lg-8 col-md-8 col-sm-8">
                <div>
                    <input type="text" style="float: right; width: 30%; height: 35px " placeholder="Search...." class="form-control" ng-model="Search" />
                </div>
                <table class="table table-bordered" arrow-selector>
                    <tr style="background-color: #C12D2D; color: white;text-align: center">
                        <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEduBord'" style="width: 25%">{{field.T_LANG2_TEXT}}</th>
                        <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblDocDegID'" style="width: 20%">{{field.T_LANG2_TEXT}}</th>
                        <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'" style="width: 25%">{{field.T_LANG2_TEXT}}</th>
                        <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'" style="width: 30%">{{field.T_LANG2_TEXT}}</th>
                    </tr>
                    <tr dir-paginate="Z in DepartmentList |filter : Search |itemsPerPage:5 | orderBy:'-T_EDU_BOARD_ID'" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index,Z)">
                        <td style="width: 20%">{{Z.T_EDU_BOARD_ID}}</td>
                        <td style="width: 20%">{{Z.T_DOC_DEGREE_ID}}</td>
                        <td style="width: 30%">{{Z.T_LANG1_NAME}}</td>
                        <td style="width: 30%">{{Z.T_LANG2_NAME}}</td>
                    </tr>
                </table>
                <dir-pagination-controls max-size="5"
                                         direction-links="true"
                                         boundary-links="true">
                </dir-pagination-controls>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-2"></div>
        </div>
</div>


