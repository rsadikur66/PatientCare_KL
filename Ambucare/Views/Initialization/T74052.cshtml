@{
    ViewBag.Title = "T74052";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .selected {
        background-color: #E17D7D;
        color: white;
        font-weight: bold;
    }
    tr:hover {
        background-color: #E17D7D;
    }
</style>



@*<script src="@VirtualPathUtility.ToAbsolute(" ~/Scripts/jquery-2.1.4.min.js")"></script>*@

<script src="~/Apps/JSService/Initialization/T74052Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>
<script src="~/Apps/JSController/Initialization/T74052Controller.js"></script>
<script src="~/Scripts/dirPagination.js"></script>

@*<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>*@
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

@section container{
    <div id="options" ng-app="Ambucare" ng-controller="T74052Controller">
        <div><button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button></div>
        <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
        <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear_Click()"></button>
        <button ID="btnNext" ToolTip="NextBlock" class="Button Next"></button>
        @*<input id="btnNext" ToolTip="NextBlock" type="button" name="btnse" class="Button Next" ng-click="NextClick()"/>*@
    </div>
}

<div class="container" ng-app="Ambucare" ng-controller="T74052Controller">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 1.6% auto; border: 2px solid #E17D7D; border-radius: 5px">
                    
                    <div class="row" style="padding-bottom: 8px; padding-top: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblZoneCode" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblZoneCode'" class="ng-cloak" associatedcontrolid="txtZoneCode">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtZoneCode" type="text" ng-model="obj.T_ZONE_CODE" style="width: 80%;" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblSLNo" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblSLNo'" class="ng-cloak" associatedcontrolid="txtSLNo">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtSLNo" type="text" ng-model="obj.T_SL_NO"  style="width: 80%;" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblEnglishName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'" class="ng-cloak" associatedcontrolid="txtEnglishName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtEnglishName" type="text" ng-model="obj.T_LANG1_NAME"  style="width: 80%;" />
                            </div>

                        </div>
                    </div>

                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">

                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblLocalName" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'" class="ng-cloak" associatedcontrolid="txtLocalName">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtLocalName" type="text" ng-model="obj.T_LANG2_NAME" style="width: 80%;" />
                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>

    </div>
    
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div>
                <input type="text" style="float: right; width: 30%; height: 35px " placeholder="Search...." class="form-control" ng-model="Search" />
            </div>
            <table class="table table-bordered" arrow-selector>
                <tr style="background-color: #C12D2D; color: white;text-align: center">
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblZoneCode'" style="width: 20%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblSLNo'" style="width: 20%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblEnglishName'" style="width: 30%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblLocalName'" style="width: 30%">{{field.T_LANG2_TEXT}}</th>
                </tr>
                <tr dir-paginate="Z in ZoneList |filter : Search |itemsPerPage:5 | orderBy:'-T_ZONE_CODE'" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index,Z)">
                    <td style="width: 20%">{{Z.T_ZONE_CODE}}</td>
                    <td style="width: 20%">{{Z.T_SL_NO}}</td>
                    <td style="width: 30%">{{Z.T_LANG1_NAME}}</td>
                    <td style="width: 30%">{{Z.T_LANG2_NAME}}</td>
                </tr>
            </table>
            <dir-pagination-controls max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
    </div>

</div>
