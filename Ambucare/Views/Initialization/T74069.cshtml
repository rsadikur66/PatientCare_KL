
@{
    ViewBag.Title = "T74069";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style>
    .selected {
        background-color: #E17D7D;
        color: white;
        font-weight: bold;
    }

    tr:hover {
        background-color: #E17D7D;
    }
</style>

<script src="~/Apps/JSService/Initialization/T74069Service.js"></script>
<script src="~/Apps/JSService/LabelService.js"></script>
<script src="~/Apps/JSController/Initialization/T74069Controller.js"></script>

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/dirPagination.js"></script>
@section container{
    <div id="options" ng-app="Ambucare" ng-controller="T74069Controller">
        <button ID="btnSave" Tooltip="Save" class="Button Save" ng-click="Save_Click()"></button>
        <button ID="btnDelete" ToolTip="Delete" class="Button Delete" ng-click="Delete_Click()"></button>
        <button ID="btnClear" ToolTip="Clear" class="Button Clear" ng-click="Clear_Click()"></button>
        <button ID="btnNext" ToolTip="NextBlock" class="Button Next"></button>
        @*<input id="btnNext" ToolTip="NextBlock" type="button" name="btnse" class="Button Next" ng-click="NextClick()"/>*@
    </div>
}

<div class="container" ng-app="Ambucare" ng-controller="T74069Controller">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
        <div class="col-lg-6 col-md-6 col-sm-6">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12" style="margin: 1.6% auto; border: 2px solid #E17D7D; border-radius: 5px">
                    <div></div>
                    <div class="row" style="padding-bottom: 8px; padding-top: 8px" hidden>
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblBloodGroupID" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblBloodGroupID'" class="ng-cloak" associatedcontrolid="txtBlGrID">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtBlGrID" type="text" ng-model="obj.T_BLD_GROUP_ID" readonly="readonly" style="width: 80%;" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 8px; padding-top: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblShortDes1" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblShortDes1'" class="ng-cloak" associatedcontrolid="txtShortDes1">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtShortDes1" type="text" ng-model="obj.T_SHOT_DESC1" style="width: 80%;" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblShortDes2" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblShortDes2'" class="ng-cloak" associatedcontrolid="txtShortDes2">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtShortDes2" type="text" ng-model="obj.T_SHOT_DESC2" style="width: 80%;" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="padding-bottom: 8px">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-5 col-md-5 col-sm-5">
                                <label id="lblBloodGroup" ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblBloodGroup'" class="ng-cloak" associatedcontrolid="txtBloodGroup">{{field.T_LANG2_TEXT}}</label>
                            </div>
                            <div class="col-lg-7 col-md-7 col-sm-7">
                                <input id="txtBloodGroup" type="text" ng-model="obj.T_BLOOD_GORUP" style="width: 80%;" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-3"></div>
    </div>
    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
        <div class="col-lg-8 col-md-8 col-sm-8">
            <div>
                <input type="text" style="float: right; width: 30%; height: 35px " placeholder="Search...." class="form-control" ng-model="Search" />
            </div>
            <table class="table table-bordered" arrow-selector>
                <tr style="background-color: #C12D2D; color: white;text-align: center">
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblBloodGroupID'" style="width: 20%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblShortDes1'" style="width: 20%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblShortDes2'" style="width: 30%">{{field.T_LANG2_TEXT}}</th>
                    <th ng-repeat="field in entity track by $index" ng-if="field.T_LABEL_NAME=='lblBloodGroup'" style="width: 30%">{{field.T_LANG2_TEXT}}</th>
                </tr>
                <tr dir-paginate="Z in BloodGroupList |filter : Search |itemsPerPage:5 | orderBy:'-T_BLD_GROUP_ID'" ng-class="{'selected':$index == selectedRow}" ng-click="setClickedRow($index,Z)">
                    <td style="width: 20%">{{Z.T_BLD_GROUP_ID}}</td>
                    <td style="width: 20%">{{Z.T_SHOT_DESC1}}</td>
                    <td style="width: 30%">{{Z.T_SHOT_DESC2}}</td>
                    <td style="width: 30%">{{Z.T_BLOOD_GORUP}}</td>
                </tr>
            </table>
            <dir-pagination-controls max-size="5"
                                     direction-links="true"
                                     boundary-links="true">
            </dir-pagination-controls>
        </div>
        <div class="col-lg-2 col-md-2 col-sm-2"></div>
    </div>
</div>


